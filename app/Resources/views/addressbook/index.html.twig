{% extends 'base.html.twig' %} 
{% block stylesheets %} 
   <style> 
      .table { border-collapse: collapse; } 
      .table th, td { 
         border-bottom: 1px solid #ddd; 
         width: 250px; 
         text-align: left; 
         align: left; 
         padding:10px;
      } 
   </style> 
{% endblock %}  
{% block body %} 
 <div> 
      <a href = "{{ path('create_address') }}">Add</a> 
</div> 
<h1>All Addresses</h1>
{% if data is not empty %}
    <table class="table">
        <thead>
            <tr>
                <th>FirstName</th>
                <th>LastName</th>
                <th>Country</th>
                <th>City</th>
                <th>Street</th>
                <th>Zip</th>
                <th>Phone No</th>
                <th>Birthday</th>
                <th>Email</th>
                <th colspan='2'>Action</th>
            </tr>
        </thead>
        <tbody>
            {% for address in data %}
                <tr>
                    <td>{{address.firstname }}</td>
                    <td>{{address.lastname }}</td>
                    <td>{{address.country}}</td>
                    <td>{{address.city}}</td>
                    <td>{{address.street}}</td>
                    <td>{{address.zip}}</td>
                    <td>{{address.phoneNo}}</td>
                    <td>{{address.birthday | date('c')}}</td>
                    <td>{{address.email}}</td>
                    <td>
                        <a href="destroy/{{ address.id }}">Delete</a>
                    </td>
                    <td>
                        <a href="update/{{ address.id }}">Update</a>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
    {% else %}
    <p>No address found.</p>
{% endif %}
{% endblock %}         
